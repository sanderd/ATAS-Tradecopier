@page
@model sadnerd.io.ATAS.OrderEventHub.Models.Pages.ProjectXAccounts.IndexModel

<h1>ProjectX Accounts</h1>

<p>
    <a asp-page="/ProjectXAccount/Create" class="btn btn-primary mb-3">Add New Account</a>
    <a asp-page="/ApiCredentials/Index" class="btn btn-outline-secondary mb-3">Manage API Credentials</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Account ID</th>
            <th>Vendor</th>
            <th>API Credential</th>
            <th>API User</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.ProjectXAccounts)
        {
            <tr>
                <td>@account.ProjectXAccountId</td>
                <td>@account.Vendor</td>
                <td>
                    @if (account.ApiCredential != null)
                    {
                        <span>@account.ApiCredential.DisplayName</span>
                    }
                    else
                    {
                        <span class="text-warning">No API credentials assigned</span>
                    }
                </td>
                <td>
                    @if (account.ApiCredential != null)
                    {
                        <span>@account.ApiCredential.ApiUser</span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>
                    @if (account.ApiCredential?.IsActive == true)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else if (account.ApiCredential?.IsActive == false)
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">No Credentials</span>
                    }
                </td>
                <td>
                    <a asp-page="/ProjectXAccount/Edit" asp-route-id="@account.ProjectXAccountId" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-page="/ProjectXAccount/Delete" asp-route-id="@account.ProjectXAccountId" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
