@page "{id}"
@model sadnerd.io.ATAS.OrderEventHub.Models.Pages.ProjectXAccounts.DeleteModel
@{
    ViewData["Title"] = "Delete ProjectX Account";
}

<h1>Delete ProjectX Account</h1>

<p>Are you sure you want to delete this account?</p>
<p><strong>Account ID:</strong> @Model.ProjectXAccount?.ProjectXAccountId</p>
<p><strong>Vendor:</strong> @Model.ProjectXAccount?.Vendor</p>

<form method="post">
    <input type="hidden" asp-for="ProjectXAccount.ProjectXAccountId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/ProjectXAccount/Index" class="btn btn-secondary">Cancel</a>
</form>
