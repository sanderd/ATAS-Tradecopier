@page
@model sadnerd.io.ATAS.OrderEventHub.Models.Pages.ApiCredentials.EditModel
@{
    ViewData["Title"] = "Edit API Credential";
}

<h1>Edit ProjectX API Credential</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApiCredential.Id" />
            <input type="hidden" asp-for="ApiCredential.CreatedAt" />
            
            <div class="form-group mb-3">
                <label asp-for="ApiCredential.Vendor" class="form-label">Vendor</label>
                <select asp-for="ApiCredential.Vendor" class="form-control" asp-items="Model.AvailableVendors">
                    <option value="">-- Select Vendor --</option>
                </select>
                <span asp-validation-for="ApiCredential.Vendor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ApiCredential.DisplayName" class="form-label">Display Name</label>
                <input asp-for="ApiCredential.DisplayName" class="form-control" placeholder="e.g., Production API, Test API" />
                <span asp-validation-for="ApiCredential.DisplayName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ApiCredential.ApiKey" class="form-label">API Key</label>
                <!-- Hidden field to preserve the value for form submission -->
                <input type="hidden" asp-for="ApiCredential.ApiKey" id="apiKeyHidden" />
                <div class="input-group">
                    <input name="ApiCredential.ApiKey" class="form-control" type="password" id="apiKeyInput" style="font-family: monospace;" />
                    <button type="button" class="btn btn-outline-secondary" id="toggleApiKey">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="ApiCredential.ApiKey" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ApiCredential.ApiUser" class="form-label">API User</label>
                <input asp-for="ApiCredential.ApiUser" class="form-control" />
                <span asp-validation-for="ApiCredential.ApiUser" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="ApiCredential.IsActive" class="form-check-input" />
                    <label asp-for="ApiCredential.IsActive" class="form-check-label">Active</label>
                </div>
                <span asp-validation-for="ApiCredential.IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const apiKeyInput = document.getElementById('apiKeyInput');
            const apiKeyHidden = document.getElementById('apiKeyHidden');
            const toggleButton = document.getElementById('toggleApiKey');
            const toggleIcon = document.getElementById('toggleIcon');
            
            // Get the API key value from the hidden field and populate the password field
            const apiKeyValue = apiKeyHidden.value;
            apiKeyInput.value = apiKeyValue;
            
            let isHidden = true;
            
            toggleButton.addEventListener('click', function() {
                if (isHidden) {
                    // Show the API key - change to text field
                    apiKeyInput.type = 'text';
                    toggleIcon.className = 'fas fa-eye-slash';
                    isHidden = false;
                } else {
                    // Hide the API key - change back to password field
                    apiKeyInput.type = 'password';
                    toggleIcon.className = 'fas fa-eye';
                    isHidden = true;
                }
            });
            
            // Keep the hidden field in sync when the user changes the value
            apiKeyInput.addEventListener('input', function() {
                apiKeyHidden.value = apiKeyInput.value;
            });
        });
    </script>
}