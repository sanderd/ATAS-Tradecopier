@page
@model sadnerd.io.ATAS.OrderEventHub.Models.Pages.ApiCredentials.CreateModel
@{
    ViewData["Title"] = "Create API Credential";
}

<h1>Create ProjectX API Credential</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="ApiCredential.Vendor" class="form-label">Vendor</label>
                <select asp-for="ApiCredential.Vendor" class="form-control" asp-items="Model.AvailableVendors">
                    <option value="">-- Select Vendor --</option>
                </select>
                <span asp-validation-for="ApiCredential.Vendor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ApiCredential.DisplayName" class="form-label">Display Name</label>
                <input asp-for="ApiCredential.DisplayName" class="form-control" placeholder="e.g., Production API, Test API" />
                <span asp-validation-for="ApiCredential.DisplayName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ApiCredential.ApiKey" class="form-label">API Key</label>
                <div class="input-group">
                    <input asp-for="ApiCredential.ApiKey" class="form-control" type="password" id="apiKeyInput" />
                    <button type="button" class="btn btn-outline-secondary" id="toggleApiKey">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                </div>
                <span asp-validation-for="ApiCredential.ApiKey" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ApiCredential.ApiUser" class="form-label">API User</label>
                <input asp-for="ApiCredential.ApiUser" class="form-control" />
                <small class="form-text text-muted">
                    <i class="fas fa-info-circle"></i>
                    See the <a href="https://github.com/sanderd/ATAS-Tradecopier/blob/main/docs/configuration.md#projectxtopstepx-integration" target="_blank">documentation</a> for information on finding your API User.
                </small>
                <span asp-validation-for="ApiCredential.ApiUser" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="ApiCredential.IsActive" class="form-check-input" />
                    <label asp-for="ApiCredential.IsActive" class="form-check-label">Active</label>
                </div>
                <span asp-validation-for="ApiCredential.IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('toggleApiKey').addEventListener('click', function() {
            const apiKeyInput = document.getElementById('apiKeyInput');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (apiKeyInput.type === 'password') {
                apiKeyInput.type = 'text';
                toggleIcon.className = 'fas fa-eye-slash';
            } else {
                apiKeyInput.type = 'password';
                toggleIcon.className = 'fas fa-eye';
            }
        });
    </script>
}