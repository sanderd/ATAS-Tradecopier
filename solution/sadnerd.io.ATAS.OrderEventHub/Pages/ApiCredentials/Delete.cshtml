@page
@model sadnerd.io.ATAS.OrderEventHub.Models.Pages.ApiCredentials.DeleteModel
@{
    ViewData["Title"] = "Delete API Credential";
}

<h1>Delete ProjectX API Credential</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>API Credential Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Vendor</dt>
        <dd class="col-sm-10">@Model.ApiCredential.Vendor</dd>
        
        <dt class="col-sm-2">Display Name</dt>
        <dd class="col-sm-10">@Model.ApiCredential.DisplayName</dd>
        
        <dt class="col-sm-2">API User</dt>
        <dd class="col-sm-10">@Model.ApiCredential.ApiUser</dd>
        
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @if (Model.ApiCredential.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </dd>
        
        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.ApiCredential.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
        
        @if (Model.ApiCredential.UpdatedAt.HasValue)
        {
            <dt class="col-sm-2">Updated</dt>
            <dd class="col-sm-10">@Model.ApiCredential.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</dd>
        }
        
        @if (Model.ApiCredential.ProjectXAccounts.Any())
        {
            <dt class="col-sm-2">Used by Accounts</dt>
            <dd class="col-sm-10">
                <span class="badge bg-warning">@Model.ApiCredential.ProjectXAccounts.Count account(s)</span>
            </dd>
        }
    </dl>

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="ApiCredential.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" 
               @(Model.ApiCredential.ProjectXAccounts.Any() ? "disabled" : "") /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>