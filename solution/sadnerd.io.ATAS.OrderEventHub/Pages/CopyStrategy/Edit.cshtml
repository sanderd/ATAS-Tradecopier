@page "{id:int}"
@model sadnerd.io.ATAS.OrderEventHub.Models.Pages.CopyStrategies.EditModel

<h1>Edit Copy Strategy</h1>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="mb-3">
        <label asp-for="AtasAccountId" class="form-label"></label>
        <select asp-for="AtasAccountId" class="form-select">
            <option value="">Select Atas Account</option>
            @foreach (var account in Model.AtasAccounts)
            {
                <option value="@account.AtasAccountId">@account.AtasAccountId</option>
            }
        </select>
        <span asp-validation-for="AtasAccountId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProjectXAccountId" class="form-label"></label>
        <select asp-for="ProjectXAccountId" class="form-select">
            <option value="">Select ProjectX Account</option>
            @foreach (var account in Model.ProjectXAccounts)
            {
                <option value="@account.ProjectXAccountId">@account.ProjectXAccountId</option>
            }
        </select>
        <span asp-validation-for="ProjectXAccountId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AtasContract" class="form-label"></label>
        <input asp-for="AtasContract" type="text" class="form-control" />
        <span asp-validation-for="AtasContract" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProjectXContract" class="form-label"></label>
        <input asp-for="ProjectXContract" type="text" class="form-control" />
        <span asp-validation-for="ProjectXContract" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ContractMultiplier" class="form-label"></label>
        <input asp-for="ContractMultiplier" type="number" class="form-control" min="1" />
        <span asp-validation-for="ContractMultiplier" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Update Strategy</button>
        <a asp-page="/CopyStrategy/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}