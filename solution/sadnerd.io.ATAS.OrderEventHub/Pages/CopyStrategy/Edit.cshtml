@page "{id:int}"
@model sadnerd.io.ATAS.OrderEventHub.Models.Pages.CopyStrategies.EditModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-edit me-2"></i>Edit Copy Strategy</h1>
    <a asp-page="/CopyStrategy/Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to Strategies
    </a>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <strong>Please correct the following errors:</strong>
        <ul class="mb-0 mt-2">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="fas fa-cog me-2"></i>Strategy Configuration</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="AtasAccountId" class="form-label">
                            <i class="fas fa-user me-1"></i>Atas Account
                        </label>
                        <select asp-for="AtasAccountId" class="form-select">
                            <option value="">Select Atas Account</option>
                            @foreach (var account in Model.AtasAccounts)
                            {
                                <option value="@account.AtasAccountId">@account.AtasAccountId</option>
                            }
                        </select>
                        <span asp-validation-for="AtasAccountId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProjectXAccountId" class="form-label">
                            <i class="fas fa-external-link-alt me-1"></i>ProjectX Account
                        </label>
                        <select asp-for="ProjectXAccountId" class="form-select">
                            <option value="">Select ProjectX Account</option>
                            @foreach (var account in Model.ProjectXAccounts)
                            {
                                <option value="@account.ProjectXAccountId">@account.ProjectXAccountId</option>
                            }
                        </select>
                        <span asp-validation-for="ProjectXAccountId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="AtasContract" class="form-label">
                                    <i class="fas fa-file-contract me-1"></i>Atas Contract
                                </label>
                                <input asp-for="AtasContract" type="text" class="form-control" placeholder="e.g., ES 03-25" />
                                <span asp-validation-for="AtasContract" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ProjectXContract" class="form-label">
                                    <i class="fas fa-file-contract me-1"></i>ProjectX Contract
                                </label>
                                <input asp-for="ProjectXContract" type="text" class="form-control" placeholder="e.g., ES 03-25" />
                                <span asp-validation-for="ProjectXContract" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ContractMultiplier" class="form-label">
                            <i class="fas fa-times me-1"></i>Contract Multiplier
                        </label>
                        <input asp-for="ContractMultiplier" type="number" class="form-control" min="1" />
                        <span asp-validation-for="ContractMultiplier" class="text-danger"></span>
                        <div class="form-text">Number of contracts to trade for each source contract</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-page="/CopyStrategy/Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Update Strategy
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Important</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-1"></i>
                    <small>This strategy can only be edited because it's currently inactive. Any changes will require the strategy to be restarted.</small>
                </div>
                
                <h6><i class="fas fa-list-ul me-1"></i>What happens when you save:</h6>
                <ul class="small">
                    <li>The old configuration will be removed</li>
                    <li>A new configuration will be created</li>
                    <li>You'll need to manually start the strategy again</li>
                    <li>All previous state will be reset</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}